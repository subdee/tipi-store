{
  "schemaVersion": 2,
  "services": [
    {
      "name": "wishlist",
      "image": "ghcr.io/cmintey/wishlist:v0.54.1",
      "isMain": true,
      "environment": [
        {
          "key": "ORIGIN",
          "value": "https://${APP_DOMAIN:-localhost}"
        },
        {
          "key": "TOKEN_TIME",
          "value": "${TOKEN_TIME}"
        },
        {
          "key": "DEFAULT_CURRENCY",
          "value": "${DEFAULT_CURRENCY}"
        }
      ],
      "internalPort": 3280,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/uploads",
          "containerPath": "/usr/src/app/uploads",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data",
          "containerPath": "/usr/src/app/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}