{
  "schemaVersion": 2,
  "services": [
    {
      "name": "app",
      "image": "ghcr.io/joaovitoriasilva/endurain:v0.15.9",
      "isMain": true,
      "environment": [
        {
          "key": "DB_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "key": "FERNET_KEY",
          "value": "${FERNET_KEY}"
        },
        {
          "key": "GEOCODES_MAPS_API",
          "value": "${GEOCODES_API}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "ENDURAIN_HOST",
          "value": "https://${APP_DOMAIN:-localhost}"
        },
        {
          "key": "BEHIND_PROXY",
          "value": "true"
        },
        {
          "key": "POSTGRES_DB",
          "value": "endurain"
        },
        {
          "key": "POSTGRES_USER",
          "value": "endurain"
        },
        {
          "key": "PGDATA",
          "value": "/var/lib/postgresql/data/pgdata"
        }
      ],
      "internalPort": 8080,
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/data/activity_files",
          "containerPath": "/app/backend/data/activity_files",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/data/activity_media",
          "containerPath": "/app/backend/data/activity_media",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/data/server_images",
          "containerPath": "/app/backend/data/server_images",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/data/user_images",
          "containerPath": "/app/backend/data/user_images",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/logs",
          "containerPath": "/app/backend/logs",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "dependsOn": {
        "postgres": {
          "condition": "service_healthy"
        }
      }
    },
    {
      "name": "postgres",
      "image": "docker.io/postgres:17.5",
      "environment": [
        {
          "key": "DB_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "POSTGRES_PASSWORD",
          "value": "${DB_PASSWORD}"
        },
        {
          "key": "SECRET_KEY",
          "value": "${SECRET_KEY}"
        },
        {
          "key": "FERNET_KEY",
          "value": "${FERNET_KEY}"
        },
        {
          "key": "GEOCODES_MAPS_API",
          "value": "${GEOCODES_API}"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "ENDURAIN_HOST",
          "value": "https://${APP_DOMAIN:-localhost}"
        },
        {
          "key": "BEHIND_PROXY",
          "value": "true"
        },
        {
          "key": "POSTGRES_DB",
          "value": "endurain"
        },
        {
          "key": "POSTGRES_USER",
          "value": "endurain"
        },
        {
          "key": "PGDATA",
          "value": "/var/lib/postgresql/data/pgdata"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/postgres",
          "containerPath": "/var/lib/postgresql/data",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ],
      "healthCheck": {
        "test": "pg_isready -U endurain",
        "interval": "5s",
        "timeout": "5s",
        "retries": 5
      }
    }
  ]
}