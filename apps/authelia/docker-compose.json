{
  "schemaVersion": 2,
  "services": [
    {
      "name": "authelia",
      "image": "authelia/authelia:4.39.14",
      "environment": [
        {
          "key": "PUID",
          "value": "1000"
        },
        {
          "key": "PGID",
          "value": "1000"
        },
        {
          "key": "TZ",
          "value": "${TZ}"
        },
        {
          "key": "AUTHELIA_IDENTITY_VALIDATION_RESET_PASSWORD_JWT_SECRET",
          "value": "${AUTHELIA_IDENTITY_VALIDATION_RESET_PASSWORD_JWT_SECRET}"
        },
        {
          "key": "AUTHELIA_SESSION_SECRET",
          "value": "${AUTHELIA_SESSION_SECRET}"
        },
        {
          "key": "AUTHELIA_STORAGE_ENCRYPTION_KEY",
          "value": "${AUTHELIA_STORAGE_ENCRYPTION_KEY}"
        }
      ],
      "volumes": [
        {
          "hostPath": "${APP_DATA_DIR}/data/config",
          "containerPath": "/config",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${APP_DATA_DIR}/data/projects",
          "containerPath": "/projects",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/app-data",
          "containerPath": "/runtipi/app-data",
          "readOnly": false,
          "shared": false,
          "private": false
        },
        {
          "hostPath": "${ROOT_FOLDER_HOST}/user-config",
          "containerPath": "/runtipi/user-config",
          "readOnly": false,
          "shared": false,
          "private": false
        }
      ]
    }
  ]
}